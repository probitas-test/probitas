    "@std/jsonc": "jsr:@std/jsonc@^1.0.2",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/semver": "jsr:@std/semver@^1.0.7",
    "@std/streams": "jsr:@std/streams@^1.0.14",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "diff": "npm:diff@^8.0.2",
    "jsonc-parser": "npm:jsonc-parser@^3.3.1",
    // Override JSR packages with local paths for development
    "jsr:@probitas/builder@^0": "./packages/probitas-builder/mod.ts",
    "jsr:@probitas/cli@^0": "./packages/probitas-cli/mod.ts",
    "jsr:@probitas/discover@^0": "./packages/probitas-discover/mod.ts",
    "jsr:@probitas/expect@^0": "./packages/probitas-expect/mod.ts",
    "jsr:@probitas/logger@^0": "./packages/probitas-logger/mod.ts",
    "jsr:@probitas/probitas@^0": "./packages/probitas/mod.ts",
    "jsr:@probitas/reporter@^0": "./packages/probitas-reporter/mod.ts",
    "jsr:@probitas/runner@^0": "./packages/probitas-runner/mod.ts",
    "jsr:@probitas/core@^0": "./packages/probitas-core/mod.ts",
